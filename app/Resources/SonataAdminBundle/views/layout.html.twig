        <script type="text/javascript">
            var lastUsed  = 0;
            var remaining = 0;
            var lapse     = 0;
            var limit     = {{ max_iddle_time }};
            var url       = '{{ path("sonata_user_admin_security_login") }}';
            var interval  = 5000;
            var execTime  = time();

            idleSession(true);
            function showAbout() {
                return '{% spaceless %}{{- block("about_content")|replace({"\n":""})|raw -}}{% endspaceless %}';
            }
            jQuery(document).ready(function($) {
              /*AGREGANDO FUNCIONALIDAD DE ACERCA DE*/
              var eAbout = $('#about_info_modal');
               eAbout.on('click', function () {
                   modal_elements.push({
                       id: 'about_info_modal',
                       header: 'Acerca de',
                       func: 'showAbout',
                       footer: 'Ministerio de Salud - DTIC, &copy; {{ "now" | date('Y')}} Todos los derechos reservados.',
                       widthModal: '750px'
                   });
               });

                $.ajaxSetup({
                    complete: function(xhr, textStatus) {
                        var found = this.url.search('sis/timeInfo');
                        if(found === -1) {
                            idleSession();
                        }
                    }
                });
            });

            function idleSession(flag) {
                if(limit > 0) {
                    if( (time() - execTime) > (interval/1000) || flag === true) {
                        execTime  = time();

                        jQuery.ajax({
            			    url: Routing.generate('timeInfo'),
            			    async: true,
            			    dataType: 'json',
                            success: function(data) {
                                if(data.status === null || data.status === false) {
                                    reloadPage();
                                } else {
                                    lastUsed  = data.time;
                                    lapse     = time() - lastUsed;
                                    remaining = limit - lapse;
                                }
                            }
                        });
                    }
                }
            }

            var idleInterval = setInterval(timeCheck, interval);

            function timeCheck() {
                remaining = remaining - (interval/1000);
                if(remaining < 0) {
                    idleSession(false);
                }
            }

            function reloadPage() {
                window.location.href = url;
            }
        </script>
